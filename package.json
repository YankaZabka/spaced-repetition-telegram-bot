{
  "name": "telegram-bot-test",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "yarn build && node dist/index",
    "build": "rimraf ./dist && npx tsc",
    "dev": "nodemon",
    "eslint:check": "eslint ./src --max-warnings 0",
    "eslint:fix": "eslint ./src --fix --cache",
    "prettier:check": "prettier --check ./src",
    "prettier:write": "prettier --write ./src",
    "verify": "run-p eslint:check prettier:check",
    "format": "run-p eslint:fix prettier:write",
    "test": "vitest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings 0",
      "prettier --write"
    ]
  },
  "author": "YankaZabka",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@types/node": "18.15.10",
    "@types/node-telegram-bot-api": "0.61.6",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.57.0",
    "@typescript-eslint/parser": "5.57.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "4.2.5",
    "nodemon": "2.0.22",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.7",
    "rimraf": "4.4.1",
    "ts-node": "10.9.1",
    "typescript": "5.0.2",
    "vitest": "0.29.8"
  },
  "dependencies": {
    "dayjs": "1.11.7",
    "dotenv": "16.0.3",
    "node-telegram-bot-api": "0.61.0",
    "toad-scheduler": "2.2.0",
    "uuid": "9.0.0"
  }
}
